<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_phone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_8dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="4"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/ll_call"
        android:layout_width="@dimen/material_32dp"
        android:layout_height="@dimen/material_72dp"
        android:layout_weight="1"
        android:background="@drawable/shape_radius_16_green"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/material_4dp"
            android:padding="@dimen/material_4dp"
            android:src="@drawable/call" />

        <TextView
            android:id="@+id/tv_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxWidth="4dp"
            android:text="@string/call"
            android:textColor="@color/black"
            android:textSize="@dimen/material_12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone_add_contact"
        android:layout_width="@dimen/material_40dp"
        android:layout_height="@dimen/material_72dp"
        android:layout_marginStart="@dimen/material_8dp"
        android:layout_weight="1"
        android:background="@drawable/shape_radius_16_green"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_phone_add_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/material_4dp"
            android:padding="@dimen/material_4dp"
            android:src="@drawable/contact" />

        <TextView
            android:id="@+id/tv_phone_add_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/material_4dp"
            android:gravity="center"
            android:lines="2"
            android:text="@string/add_contact"
            android:textColor="@color/black"
            android:textSize="@dimen/material_12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share_phone"
        android:layout_width="@dimen/material_32dp"
        android:layout_height="@dimen/material_72dp"
        android:layout_marginStart="@dimen/material_8dp"
        android:layout_weight="1"
        android:background="@drawable/shape_radius_16_green"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/material_4dp"
            android:padding="@dimen/material_4dp"
            android:src="@drawable/share" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:lines="2"
            android:maxWidth="@dimen/material_24dp"
            android:padding="@dimen/material_4dp"
            android:text="@string/share"
            android:textColor="@color/black"
            android:textSize="@dimen/material_12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_copy_phone"
        android:layout_width="@dimen/material_32dp"
        android:layout_height="@dimen/material_72dp"
        android:layout_marginStart="@dimen/material_8dp"
        android:layout_weight="1"
        android:background="@drawable/shape_radius_16_green"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/material_4dp"
            android:padding="@dimen/material_4dp"
            android:src="@drawable/copy" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/material_4dp"
            android:text="@string/copy"
            android:textColor="@color/black"
            android:textSize="@dimen/material_12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>