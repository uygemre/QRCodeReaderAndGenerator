<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/settings_green"
                android:padding="@dimen/material_4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:text="@string/language"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/forest_green"
                    android:textStyle="bold"
                    android:theme="@style/SCBSwitch" />

            </LinearLayout>

            <Spinner
                android:id="@+id/spinners_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_12dp"
                android:prompt="@string/language_options"
                android:theme="@style/SpinnerTheme"
                android:spinnerMode="dialog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/material_8dp"
                android:background="@color/settings_green"
                android:padding="@dimen/material_4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:text="@string/settings"
                    android:textColor="@color/forest_green"
                    android:fontFamily="@font/montserrat_bold"
                    android:textStyle="bold"
                    android:theme="@style/SCBSwitch" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_vibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_16dp">

                <ImageView
                    android:id="@+id/img_vibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_vibration_news" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_vibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:layout_toEndOf="@id/img_vibration"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/vibration"
                    android:theme="@style/SCBSwitch"
                    app:switchMinWidth="@dimen/material_52dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_16dp">

                <ImageView
                    android:id="@+id/img_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_sound_new" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:layout_toEndOf="@id/img_sound"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/sound"
                    android:theme="@style/SCBSwitch"
                    app:switchMinWidth="@dimen/material_52dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_open_auto_browser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_16dp">

                <ImageView
                    android:id="@+id/img_open_auto_browser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_web_url_news" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_open_browser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:layout_toEndOf="@id/img_open_auto_browser"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/auto_open_url"
                    android:theme="@style/SCBSwitch"
                    app:switchMinWidth="@dimen/material_52dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_auto_copy_clipboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_16dp">

                <ImageView
                    android:id="@+id/img_auto_copy_clipboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_copy_new" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_auto_copy_clipboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:layout_toEndOf="@id/img_auto_copy_clipboard"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/auto_copy_to_clipboard"
                    android:theme="@style/SCBSwitch"
                    app:switchMinWidth="@dimen/material_52dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_auto_search_on_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_16dp">

                <ImageView
                    android:id="@+id/img_auto_search_on_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_search_new" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_auto_search_on_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:layout_toEndOf="@id/img_auto_search_on_web"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/auto_web_search"
                    android:theme="@style/SCBSwitch"
                    app:switchMinWidth="@dimen/material_52dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/material_8dp"
                android:background="@color/settings_green"
                android:padding="@dimen/material_4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:text="@string/general"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/forest_green"
                    android:textStyle="bold"
                    android:theme="@style/SCBSwitch" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_get_premium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_16dp">

                <ImageView
                    android:id="@+id/iv_get_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_premium_new" />

                <TextView
                    android:id="@+id/tv_get_premium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:layout_toEndOf="@id/iv_get_premium"
                    android:text="@string/premium"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_16dp">

                <ImageView
                    android:id="@+id/iv_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_privacy_policy_new" />

                <LinearLayout
                    android:id="@+id/ll_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:layout_toEndOf="@id/iv_privacy_policy"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_policy"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_terms_and_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_and_conditions"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/black" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_rate_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_16dp">

                <ImageView
                    android:id="@+id/iv_rate_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_rate_us_new" />

                <LinearLayout
                    android:id="@+id/ll_rate_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:layout_toEndOf="@id/iv_rate_us"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_rate_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_us"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rate_us_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/rate_us_description"
                        android:textColor="@color/black" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_share_with_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/material_16dp">

                <ImageView
                    android:id="@+id/iv_share_with_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_share_settings_new" />

                <LinearLayout
                    android:id="@+id/ll_share_with_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/material_12dp"
                    android:layout_toEndOf="@id/iv_share_with_friends"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_share_with_friends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/share_with_friends"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_share_with_friends_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/share_with_friends_description"
                        android:textColor="@color/black" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>