<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_8dp"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/material_12dp">

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="@dimen/material_24dp"
        android:layout_height="@dimen/material_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_delete_new" />

    <ImageView
        android:id="@+id/img_qr"
        android:layout_width="@dimen/material_32dp"
        android:layout_height="@dimen/material_32dp"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:src="@drawable/ic_youtube_new" />

    <TextView
        android:id="@+id/tv_qr_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_12dp"
        android:layout_toStartOf="@id/img_delete"
        android:layout_toEndOf="@id/img_qr"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/material_typography_subheading"
        android:textStyle="bold"
        tools:text="@string/webUrl" />

    <TextView
        android:id="@+id/tv_qr_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_qr_format"
        android:layout_marginStart="@dimen/material_12dp"
        android:layout_toStartOf="@id/img_delete"
        android:layout_toEndOf="@id/img_qr"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/material_typography_body1"
        tools:text="14.01.2021" />

    <TextView
        android:id="@+id/tv_qr_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_qr_date"
        android:layout_marginStart="@dimen/material_12dp"
        android:layout_marginTop="@dimen/material_8dp"
        android:layout_toStartOf="@id/img_delete"
        android:layout_toEndOf="@id/img_qr"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="5.0" />

</RelativeLayout>